<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:com.joao.studing.app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:hint="@string/login_prompt_hint" com.joao.studing.app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" com.joao.studing.app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:layout_marginTop="8dp"
              com.joao.studing.app:layout_constraintTop_toTopOf="parent" android:id="@+id/ed1"
              android:layout_marginBottom="8dp" com.joao.studing.app:layout_constraintBottom_toTopOf="@+id/editText2"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:hint="@string/password_prompt_hint" com.joao.studing.app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" com.joao.studing.app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:layout_marginBottom="8dp"
              com.joao.studing.app:layout_constraintBottom_toBottomOf="parent"
              android:id="@+id/ed2"
              com.joao.studing.app:layout_constraintTop_toBottomOf="@+id/ed1"/>
    <TextView
            android:text="@string/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" com.joao.studing.app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            com.joao.studing.app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>